{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "paths": {
      "openinula": ["../packages/inula"],
    }
  },
  "include": [
    "./src/**/*",
    "./examples/**/*"
  ]
}
