{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "sourceMap": false,
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "./externals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./src/template/**/*"
  ],
  "ts-node": {
    "esm": true,
  },
}