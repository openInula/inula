{
  "name": "@openinula/next",
  "version": "0.0.2",
  "keywords": [
    "inula"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./jsx-runtime": {
      "types": "./jsx-runtime.d.ts"
    }
  },
  "scripts": {
    "build": "tsup --sourcemap",
    "test": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "types": "tsc --emitDeclarationOnly --outDir build"
  },
  "dependencies": {
    "csstype": "^3.1.3",
    "@openinula/next-shared": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^6.5.0",
    "@openinula/vite-plugin-inula-next": "workspace:*",
    "vitest": "2.0.5"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true,
    "minify": false,
    "noExternal": [
      "@openinula/next-shared"
    ],
    "dts": {
      "resolve": true
    }
  }
}
